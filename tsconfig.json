{
    "compilerOptions": {
        "declaration": true,
        "outDir": "x:\this-dir-must-not-be-created",
        "sourceMap": true,
        "moduleResolution": "node",
        "lib":["es2015", "dom"],
        "target": "es5",
        "skipLibCheck": true, //para que no haga chequeo de tipos en los declaration files dentro de node-modules(pg-promise-strict, express, node)
        "module": "umd",
        "typeRoots" : ["node_modules/@types"],
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
        "noFallthroughCasesInSwitch": true
    },
    "include":[
        "src/**/*"
    ]
}